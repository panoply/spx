{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    //"**/public": true
  },
  "npm.packageManager": "pnpm",
  "prettier.ignorePath": ".prettierignore",
  "stylelint.validate": [
    "scss",
    "sass",
    "less",
    "postcss"
  ],
  "spx.files": [
    "./docs/src/app/**/*.ts"
  ],
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": false,
  "scss.validate": false,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "json.schemas": [
    {
      "url": "https://cdn.jsdelivr.net/npm/tsup/schema.json",
      "fileMatch": [
        "package.json"
      ]
    }
  ],
  "highlight.regexes": {
    "(?<=:{3,4}\\s)(grid|example|tabs|css|scss|html|note)": {
      "decorations": [
        {
          "color": "#81D4FA",
          "fontWeight": "900"
        }
      ]
    },
    "\\b(S)(?=\\.)": {
      "decorations": [
        {
          "color": "#c881fa",
          "fontWeight": "900"
        }
      ]
    },
    "(?<=:{3,4}[a-z ]+)([colsxmd0-9-]+)": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#91b5eb",
          "isWholeLine": true
        }
      ]
    },
    "(XHR)(?=\\.)": {
      "decorations": [
        {
          "color": "#81D4FA"
        }
      ]
    },
    "(?<=\\.)(\\$[a-zA-Z]+)": {
      "decorations": [
        {
          "color": "#c5c5c5"
        }
      ]
    },
    "\\b(connect|onmount|unmount|onmedia|onroute)\\b(?=\\s*\\()": {
      "decorations": [
        {
          "color": "#58e093",
          "fontStyle": "bold"
        }
      ]
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "[liquid]": {
    "editor.defaultFormatter": "sissel.shopify-liquid",
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.parameterHints.enabled": true,
    "editor.suggest.showModules": true,
  },
  "cSpell.words": [
    "Alexey",
    "Barba",
    "endfor",
    "forloop",
    "Gervonta",
    "gtag",
    "hrefs",
    "HTMX",
    "iframes",
    "Livewire",
    "navigations",
    "oninit",
    "spx",
    "Wanstrath",
    "worktree",
    "Спасибі"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}